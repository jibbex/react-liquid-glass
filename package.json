{
  "name": "react-liquid-glass",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "React component library for building liquid glass UI surfaces.",
  "license": "MIT",
  "keywords": [
    "react",
    "liquid-glass",
    "ui",
    "component",
    "effects"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jibbex/react-liquid-glass.git"
  },
  "homepage": "https://github.com/jibbex/react-liquid-glass#readme",
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "build:demo": "cross-env VITE_BASE_PATH=/react-liquid-glass vite build --config vite.demo.config.ts",
    "typecheck": "tsc -p tsconfig.lib.json",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview"
  },
  "main": "./dist/react-liquid-glass.cjs",
  "module": "./dist/react-liquid-glass.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/react-liquid-glass.es.js",
      "require": "./dist/react-liquid-glass.cjs"
    },
    "./styles.css": {
      "default": "./dist/styles.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "./dist/styles.css"
  ],
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^25.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^2.1.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
